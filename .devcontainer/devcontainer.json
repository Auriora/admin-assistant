{
  "name": "Admin Assistant Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "forwardPorts": [5000],
  "runArgs": ["--name", "admin-assistant-dev"],
  "postCreateCommand": "pip install -e .[dev]",
  "remoteUser": "devuser",
  "workspaceFolder": "/workspace",
  "containerEnv": {
    "APP_ENV": "development"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.pythonPath": "/usr/local/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "ms-toolsai.jupyter",
        "ms-python.black-formatter"
      ]
    }
  }
} 